<div class="card">
  <div class="card-header">
    <h2><%= @shop.product %></h2>
  </div>
  <div class="card-description">
    <p><%= @shop.price %></p>
  </div>
  <div class="card-description">
    <p><%= @shop.description %></p>
  </div>
</div>
<%= link_to 'edit', edit_shop_path, {class: "btn btn-primary"}  %>
<%= link_to "Delete", shop_path(@shop),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
